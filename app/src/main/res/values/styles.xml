<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ThemeOverlay.AppStore.ActionBarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/colorAccent</item>
    </style>

    <style name="Widget.AppStore.ActionBarStyle" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="titleTextStyle">@style/TextAppearance.AppStore.ActionBarTitleTextStyle</item>
        <item name="subtitleTextStyle">@style/TextAppearance.AppStore.ActionBarSubtitleTextStyle
        </item>
    </style>

    <style name="TextAppearance.AppStore.ActionBarTitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/colorAccent</item>
    </style>

    <style name="TextAppearance.AppStore.ActionBarSubtitleTextStyle" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">14sp</item>
    </style>

</resources>
